<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7DE381" />
            <gradient android:angle="-90" android:startColor="#327034" android:endColor="#138F18"  />
            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:topLeftRadius="20dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#32C538" />
            <solid android:color="#28BA2E"/>
            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:topLeftRadius="20dp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#24BC2A" />
            <gradient android:angle="-90" android:startColor="#A6E6A8" android:endColor="#0CB813" />
            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:topLeftRadius="20dp"/>
        </shape>

    </item>


</selector>