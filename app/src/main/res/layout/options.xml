    <abak.tr.com.boxedverticalseekbar.BoxedVertical
        android:id="@+id/Light"
        android:layout_width="40dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:elevation="5dp"
        app:backgroundColor="@color/seek_background"
        app:cornerRadius="30dp"
        app:defaultValue="50"
        app:imageEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/Pan"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/Pan"
        app:max="255"
        app:progressColor="@color/seek_active"
        app:step="1"
        app:textBottomPadding="20"
        app:textColor="#FFFFFF"
        app:textEnabled="true"
        app:textSize="12sp"
        app:touchDisabled="true" />

    <org.ros.android.view.RosImageView
        android:id="@+id/record_button"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/control_card"
        app:layout_constraintEnd_toEndOf="@+id/auto_btn"
        app:layout_constraintStart_toStartOf="@+id/auto_btn"
        app:layout_constraintTop_toTopOf="@+id/control_card" />

    <org.ros.android.view.RosImageView
        android:id="@+id/play_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/record_button"
        app:layout_constraintEnd_toEndOf="@+id/control_card"
        app:layout_constraintStart_toEndOf="@+id/record_button"
        app:layout_constraintTop_toTopOf="@+id/record_button" />

    <org.ros.android.view.RosImageView
        android:id="@+id/stop_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/record_button"
        app:layout_constraintEnd_toStartOf="@+id/record_button"
        app:layout_constraintStart_toStartOf="@+id/control_card"
        app:layout_constraintTop_toTopOf="@+id/record_button" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/auto_card"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        app:cardBackgroundColor="#E3E6E8"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/manual_card"
        app:layout_constraintEnd_toStartOf="@+id/Light"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/manual_card"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="#3F51B5" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/control_card"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:layout_marginStart="32dp"
        app:cardBackgroundColor="#E3E6E8"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/manual_card"
        app:layout_constraintEnd_toStartOf="@+id/Light"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/manual_card"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#3F51B5" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/manual_card"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="#E3E6E8"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Light"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:rippleColor="#3F51B5" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/preset_card"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        app:cardBackgroundColor="#E3E6E8"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/control_card"
        app:layout_constraintEnd_toStartOf="@+id/Light"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auto_card"
        app:layout_constraintVertical_bias="0.5"
        app:rippleColor="#3F51B5">


        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel"
            android:layout_width="250dp"
            android:layout_height="match_parent" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web UI"
        android:textColor="#03A9F4"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/web_control"
        app:layout_constraintStart_toStartOf="@+id/web_control"
        app:layout_constraintTop_toBottomOf="@+id/web_control" />


    <pl.droidsonroids.gif.GifImageView
        android:id='@+id/assist_giff1'
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:src="@drawable/assist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/up_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:elevation="10dp"
        android:src="@drawable/up_button"
        app:layout_constraintEnd_toStartOf="@+id/Pan"
        app:layout_constraintStart_toStartOf="@+id/manual_card"
        app:layout_constraintTop_toTopOf="@+id/Pan" />

    <ImageView
        android:id="@+id/down_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:elevation="10dp"
        android:rotation="180"
        android:src="@drawable/up_button"
        app:layout_constraintBottom_toTopOf="@+id/pan_text"
        app:layout_constraintEnd_toEndOf="@+id/up_button"
        app:layout_constraintStart_toStartOf="@+id/up_button"
        app:layout_constraintTop_toBottomOf="@+id/up_button" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="@+id/web_control"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/web_control"
        app:layout_constraintTop_toTopOf="@+id/web_control" />
</androidx.constraintlayout.widget.ConstraintLayout>