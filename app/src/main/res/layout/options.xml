<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    tools:context=".OptionsActivity">

    <org.ros.android.view.RosImageView
        android:id="@+id/web_control"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/qr"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mybutton"
        android:elevation="10dp"
        android:gravity="center"
        android:text="RiPod Controller Modes"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/auto_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/mybutton"
        android:backgroundTintMode="src_in"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Auto"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/auto_card"
        app:layout_constraintEnd_toEndOf="@+id/auto_card"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/auto_card"
        app:layout_constraintTop_toTopOf="@+id/auto_card"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/manual_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/mybutton"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Manual"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/manual_card"
        app:layout_constraintEnd_toEndOf="@+id/manual_card"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/manual_card"
        app:layout_constraintTop_toTopOf="@+id/manual_card"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/load_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/mybutton"
        android:backgroundTintMode="src_in"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Load"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/preset_card"
        app:layout_constraintEnd_toEndOf="@+id/preset_card"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/preset_card"
        app:layout_constraintTop_toTopOf="@+id/preset_card"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/mybutton"
        android:backgroundTintMode="src_in"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/preset_card"
        app:layout_constraintEnd_toEndOf="@+id/preset_card"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/preset_card"
        app:layout_constraintTop_toTopOf="@+id/preset_card"
        app:layout_constraintVertical_bias="0.75" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/light_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Light"
        app:layout_constraintStart_toStartOf="@+id/Light"
        app:layout_constraintTop_toBottomOf="@+id/Light"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:background="#FFFFFF"
            android:text="Light"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10dp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tilt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/manual_card"
        app:layout_constraintEnd_toEndOf="@+id/Tilt"
        app:layout_constraintStart_toStartOf="@+id/Tilt"
        app:layout_constraintTop_toBottomOf="@+id/Tilt"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:background="#FFFFFF"
            android:text="Tilt"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10dp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/manual_card"
        app:layout_constraintEnd_toEndOf="@+id/Pan"
        app:layout_constraintStart_toStartOf="@+id/Pan"
        app:layout_constraintTop_toBottomOf="@+id/Pan"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:background="#FFFFFF"
            android:text="Pan"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10dp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/height_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/pan_text"
        app:layout_constraintEnd_toEndOf="@+id/down_button"
        app:layout_constraintStart_toStartOf="@+id/down_button"
        app:layout_constraintTop_toTopOf="@+id/pan_text">

        <TextView
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:background="#FFFFFF"
            android:text="Height"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10dp" />
    </com.google.android.material.card.MaterialCardView>

    <abak.tr.com.boxedverticalseekbar.BoxedVertical
        android:id="@+id/Tilt"
        android:layout_width="40dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_weight="1"
        android:elevation="5dp"
        app:backgroundColor="@color/seek_background"
        app:cornerRadius="30dp"
        app:defaultValue="60"
        app:imageEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/manual_card"
        app:layout_constraintEnd_toEndOf="@+id/manual_card"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Pan"
        app:layout_constraintTop_toBottomOf="@+id/manual_btn"
        app:layout_constraintVertical_bias="0.5"
        app:max="120"
        app:min="60"
        app:progressColor="@color/seek_active"
        app:step="1"
        app:textBottomPadding="20"
        app:textColor="#FFFFFF"
        app:textEnabled="true"
        app:textSize="12sp"
        app:touchDisabled="true" />

    <abak.tr.com.boxedverticalseekbar.BoxedVertical
        android:id="@+id/Pan"
        android:layout_width="40dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:elevation="5dp"
        app:backgroundColor="@color/seek_background"
        app:cornerRadius="30dp"
        app:defaultValue="10"
        app:imageEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/manual_card"
        app:layout_constraintEnd_toEndOf="@+id/manual_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/manual_btn"
        app:layout_constraintTop_toBottomOf="@+id/manual_btn"
        app:layout_constraintVertical_bias="0.5"
        app:max="180"
        app:progressColor="@color/seek_active"
        app:step="1"
        app:textBottomPadding="20"
        app:textColor="#FFFFFF"
        app:textEnabled="true"
        app:textSize="12sp"
        app:touchDisabled="true" />


<!--    <abak.tr.com.boxedverticalseekbar.BoxedVertical-->
